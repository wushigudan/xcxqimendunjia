/* 页面整体布局 */
.page {
  min-height: 100vh;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
}

/* 顶部标题区域样式 */
.header {
  padding: 60rpx 0;
  background: linear-gradient(180deg, #8B4513 0%, #A0522D 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #F8F0E3;
  text-align: center;
  display: block;
  letter-spacing: 4rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 主要内容区域 */
.content {
  flex: 1;
  padding: 30rpx;
}

/* 输入表单区域 */
.input-section {
  background: white;
  padding: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 输入项通用样式 */
.picker-item, .input-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

/* 输入框样式 */
.input-item input {
  text-align: right;
  width: 60%;
}

/* 单选按钮组样式 */
.radio-group {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.label {
  min-width: 160rpx;
}

.radio-options {
  display: flex;
  flex-direction: row;
  gap: 60rpx;
}

.radio-label {
  display: flex;
  align-items: center;
}

.radio-label radio {
  margin-right: 10rpx;
  transform: scale(0.8);
}

/* 提交按钮样式 */
.submit-btn {
  margin: 40rpx 0;
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  color: #F8F0E3;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(139, 69, 19, 0.2);
}

/* 必填项标记样式 */
.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 4rpx;
}

/* 操作区域样式 */
.operation-section {
  margin: 40rpx 0;
}

.result-section {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.basic-info {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  margin-bottom: 15rpx;
}

.info-label {
  color: #333;
  font-weight: bold;
  min-width: 120rpx;
}

.info-value {
  color: #666;
  flex: 1;
}

.ganzhi-info, .shensha-info {
  margin-bottom: 30rpx;
  padding-top: 20rpx;
