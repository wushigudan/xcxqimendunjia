/**index.wxss**/
/* 页面整体样式 */
page {
  height: 100vh;  /* 设置页面高度为视窗高度 */
  display: flex;
  flex-direction: column;
  background-color: #F5F5F5;  /* 设置浅灰色背景 */
}

/* 顶部标题区域样式 */
.header {
  padding: 60rpx 0;
  /* 设置渐变背景，从深褐色到浅褐色 */
  background: linear-gradient(180deg, #8B4513 0%, #A0522D 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);  /* 添加阴影效果 */
}

/* 标题文字样式 */
.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #F8F0E3;  /* 米白色 */
  text-align: center;
  display: block;
  letter-spacing: 4rpx;  /* 字间距 */
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);  /* 文字阴影 */
}

/* 中间内容区域样式 */
.content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  margin-top: 60rpx;
}

/* 按钮组样式 */
.button-group {
  width: 85%;
  display: flex;
  flex-direction: column;
  gap: 60rpx;  /* 按钮之间的间距 */
  margin-bottom: 60rpx;
}

/* 按钮样式 */
.btn {
  /* 设置渐变背景 */
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  color: #F8F0E3;
  padding: 45rpx;
  border-radius: 15rpx;
  text-align: center;
  font-size: 38rpx;
  /* 添加阴影效果 */
  box-shadow: 0 8rpx 16rpx rgba(139, 69, 19, 0.2);
  transition: all 0.3s ease;  /* 添加过渡动画 */
  position: relative;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

/* 按钮内部光泽效果 */
.btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(rgba(255, 255, 255, 0.1), transparent);
  pointer-events: none;
}

/* 按钮点击效果 */
.btn:active {
  transform: translateY(4rpx);  /* 按下时微微下移 */
  box-shadow: 0 4rpx 8rpx rgba(139, 69, 19, 0.2);
}

/* 底部说明区域样式 */
.info-section {
  padding: 40rpx;
  background-color: #FFF;
  margin-top: auto;  /* 自动推到底部 */
  border-top: 1rpx solid rgba(139, 69, 19, 0.2);
}

/* 说明区域标题样式 */
.info-title {
  font-size: 32rpx;
  color: #8B4513;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 说明项目样式 */
.info-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(139, 69, 19, 0.05);  /* 浅褐色背景 */
  border-radius: 10rpx;
}

/* 说明项目标题样式 */
.info-header {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: bold;
  margin-bottom: 10rpx;
}

/* 说明内容样式 */
.info-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;  /* 行高 */
}

.explanation-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  width: 90%;
}

.explanation-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  text-align: center;
}

.explanation-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.explanation-content text {
  display: block;
  margin-bottom: 10rpx;
}
